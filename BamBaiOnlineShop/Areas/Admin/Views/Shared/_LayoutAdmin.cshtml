@using BamBaiOnlineShop.Models
@{
    var session = (AdminLogin)Session[BamBaiOnlineShop.Models.CommonConstants.ADMIN_SESSION];
}
<!DOCTYPE HTML>
<html>
<head>
    <title>Admin BamBai Shop</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="BamBai Shop Admin" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <link href="~/Areas/Content/css/bootstrap.min.css" rel='stylesheet' type='text/css' />
    <!-- Custom Theme files -->
    <link href="~/Areas/Content/css/style.css" rel='stylesheet' type='text/css' />
    <link href="~/Areas/Content/css/font-awesome.css" rel="stylesheet">
    <script src="~/Areas/Content/js/jquery.min.js"></script>
    <!-- Mainly scripts -->
    <script src="~/Areas/Content/js/jquery.metisMenu.js"></script>
    <script src="~/Areas/Content/js/jquery.slimscroll.min.js"></script>
    <!-- Custom and plugin javascript -->
    <link href="~/Areas/Content/css/custom.css" rel="stylesheet">
    <script src="~/Areas/Content/js/custom.js"></script>
    <script src="~/Areas/Content/js/screenfull.js"></script>
    <script>
        $(function () {
            $('#supported').text('Supported/allowed: ' + !!screenfull.enabled);

            if (!screenfull.enabled) {
                return false;
            }



            $('#toggle').click(function () {
                screenfull.toggle($('#container')[0]);
            });



        });
    </script>

    <!----->
</head>
<body>
    <div id="wrapper">

        <!----->
        <nav class="navbar-default navbar-static-top" role="navigation">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <h1> <a class="navbar-brand" href="@Url.Action("Index","Default")">BamBai Shop</a></h1>
            </div>
            <div class=" border-bottom">


                <!-- Brand and toggle get grouped for better mobile display -->
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="drop-men">
                    <ul class=" nav_1">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle dropdown-at" data-toggle="dropdown"><span class=" name-caret">@session.AdminName<i class="caret"></i></span><img src="~/Areas/Content/images/wo.jpg"></a>
                            <ul class="dropdown-menu " role="menu">
                                <li><a href="@Url.Action("Logout","LoginSigninAdmin")"><i class="fa fa-user"></i>Logout</a></li>
                            </ul>
                        </li>

                    </ul>
                </div><!-- /.navbar-collapse -->
                <div class="clearfix">

                </div>

                <div class="navbar-default sidebar" role="navigation">
                    <div class="sidebar-nav navbar-collapse">
                        <ul class="nav" id="side-menu">

                            <li>
                                <a href="@Url.Action("Index","Default")" class=" hvr-bounce-to-right"><i class="fa fa-dashboard nav_icon "></i><span class="nav-label">Dashboards</span> </a>
                            </li>
                            <li>
                                <a href="#" class=" hvr-bounce-to-right"><i class="fa fa-indent nav_icon"></i> <span class="nav-label">Quản lý đơn hàng</span><span class="fa arrow"></span></a>
                                <ul class="nav nav-second-level">
                                    <li><a href="@Url.Action("Index","Order")" class=" hvr-bounce-to-right"> <i class="fa fa-file-text-o nav_icon"></i>Kiểm duyệt đơn hàng</a></li>

                                </ul>
                            </li>
                            <li>
                                <a href="#" class=" hvr-bounce-to-right"><i class="fa fa-indent nav_icon"></i> <span class="nav-label">Quản lý sản phẩm</span><span class="fa arrow"></span></a>
                                <ul class="nav nav-second-level">
                                    <li><a href="@Url.Action("Index","Product")" class=" hvr-bounce-to-right"> <i class="fa fa-picture-o nav_icon"></i>Sản phẩm</a></li>
                                    <li><a href="@Url.Action("ImportIndex","Product")" class=" hvr-bounce-to-right"> <i class="fa fa-file-o nav_icon"></i>Import Product</a></li>
                                    <li><a href="@Url.Action("Index","CategoryProduct")" class=" hvr-bounce-to-right"><i class="fa fa-file-text-o nav_icon"></i>Danh mục</a></li>

                                </ul>
                            </li>
                            <li>
                                <a href="#" class=" hvr-bounce-to-right"><i class="fa fa-list nav_icon"></i> <span class="nav-label">Quản lý bài viết</span><span class="fa arrow"></span></a>
                                <ul class="nav nav-second-level">
                                    <li><a href="@Url.Action("Index","Blog")" class=" hvr-bounce-to-right"><i class="fa fa-check-square-o nav_icon"></i>Bài viết</a></li>
                                    <li><a href="@Url.Action("IndexImport","Blog")" class=" hvr-bounce-to-right"> <i class="fa fa-file-o nav_icon"></i>Import Blogs</a></li>
                                    <li><a href="@Url.Action("Index","BlogType")" class=" hvr-bounce-to-right"><i class="fa fa-file-text-o nav_icon"></i>Danh mục</a></li>
                                </ul>
                            </li>
                            <li>
                                <a href="#" class=" hvr-bounce-to-right"><i class="fa fa-desktop nav_icon"></i> <span class="nav-label">Acount</span><span class="fa arrow"></span></a>
                                <ul class="nav nav-second-level">
                                    <li><a href="@Url.Action("Index","AdminAccount")" class=" hvr-bounce-to-right"> <i class="fa fa-file-text-o nav_icon"></i>Admin</a></li>
                                    <li><a href="@Url.Action("Index","Customer")" class=" hvr-bounce-to-right"><i class="fa fa-file-text-o nav_icon"></i>Customer</a></li>
                                </ul>
                            </li>
                            <li>
                                <a href="#" class=" hvr-bounce-to-right"><i class="fa fa-cog nav_icon"></i> <span class="nav-label">Settings</span><span class="fa arrow"></span></a>
                                <ul class="nav nav-second-level">
                                    <li><a href="@Url.Action("SignUp","LoginSigninAdmin")" class=" hvr-bounce-to-right"><i class="fa fa-sign-in nav_icon"></i>Singup</a></li>
                                    <li><a href="@Url.Action("Logout","LoginSigninAdmin")" class=" hvr-bounce-to-right"><i class="fa fa-sign-in nav_icon"></i>Logout</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
        <div id="page-wrapper" class="gray-bg dashbard-1">
            <div class="content-main">
                @RenderBody()
            </div>
            <div class="clearfix"> </div>
        </div>

    </div>
    <!---->
    <!--scrolling js-->
    <script src="~/Areas/Content/js/jquery.nicescroll.js"></script>
    <script src="~/Areas/Content/js/scripts.js"></script>
    <link href="~/Areas/Content/css/owl.carousel.css" rel="stylesheet">
    <script src="~/Areas/Content/js/owl.carousel.js"></script>
    <script src="~/Scripts/angular.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <!--//scrolling js-->
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.7/angular.min.js"></script>
    <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
    <script src="~/Areas/Content/js/bootstrap.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>

